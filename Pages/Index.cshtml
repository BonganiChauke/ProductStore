@page
@model IndexModel
@{
    ViewData["Title"] = "Home ";
}

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1>Welcome to ProductStore </h1>
        <p>Manage products, categories, and more — all in one place.</p>
        <a href="/Admin/Products/Index" class="btn btn-light btn-lg me-2">Go to Dashboard</a>
        <a href="/Admin/Products/Create" class="btn btn-outline-light btn-lg">Add New Product</a>
    </div>
</section>

<!-- Features Section -->
<section class="features">
    <div class="container">
        <h1 class="text-center">Features </h1>
        <div class="row text-center p-2 g-4">

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h4>Product Management</h4>
                        <p class="card-text">Easily add, edit, and remove products from your catalog.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h4>Image Feature</h4>
                        <p class="card-text">Attract customers by adding images to your products.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h4>Fully Responsive</h4>
                        <p class="card-text">Manage your store from any device with mobile-friendly design.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

