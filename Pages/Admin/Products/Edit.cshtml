@page
@model ProductStore.Pages.Admin.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="row mb-4">

    <div class="col-md-8 mx-auto rounded border p-3">
        <h4 class="mb-5"> Edit product </h4>
        <hr />

        <!-- message alert to the user -->
        @if (Model.errorMessage.Length > 0)
        {
            // if there is an error
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

        }
        else if (Model.successMessage.Length > 0)
        {
            // if there is no error
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">

            <!-- product id -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Product.Id" />
                </div>
            </div>

            <!-- product name -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="productDetail.Name" />
                    <span asp-validation-for="productDetail.Name" class="text-danger"></span>
                </div>
            </div>

            <!-- product brand -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="productDetail.Brand" />
                    <span asp-validation-for="productDetail.Brand" class="text-danger"></span>
                </div>
            </div>

            <!-- product category -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="productDetail.Category">
                        <option value="Phones">Phones</option>
                        <option value="Computers">Computers</option>
                        <option value="Accessories">Accessories</option>
                        <option value="Printers">Printers</option>
                        <option value="Cameras">Cameras</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <!-- price -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="productDetail.Price" />
                    <span asp-validation-for="productDetail.Price" class="text-danger"></span>
                </div>
            </div>

            <!-- description -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="productDetail.Description"></textarea>
                    <span asp-validation-for="productDetail.Description" class="text-danger"></span>
                </div>
            </div>

            <!-- product image view -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image Preview</label>
                <div class="col-sm-8">
                    <img src="/products/@Model.Product.ImageFileName" width="150" />
                </div>
            </div>

            <!-- image -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="productDetail.ImageFile" />
                    <span asp-validation-for="productDetail.ImageFile" class="text-danger"></span>
                </div>
            </div>

            <!-- product created at -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Created At</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Product.CreatedAt.ToString("dd/MM/yyyy")" />
                </div>
            </div>

            <!-- buttons -->
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Products/Index" role="button">Cancel</a>
                </div>
            </div>

        </form>

    </div>

</div>
