@page
@model ProductStore.Pages.Admin.Products.CreateModel
@{
    ViewData["Title"] = "Create Products";
}


<div class="row">

    <div class="col-md-8 mx-auto rounded border p-3">
        <h4 class="mb-5"> New product </h4>
        <hr />

        <form method="post" enctype="multipart/form-data">

            <!-- product name -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="productDetail.Name" />
                    <span asp-validation-for="productDetail.Name" class="text-danger"></span>
                </div>
            </div>

            <!-- product brand -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="productDetail.Brand" />
                    <span asp-validation-for="productDetail.Brand" class="text-danger"></span>
                </div>
            </div>

            <!-- product category -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="productDetail.Category">
                       <option value="Phones">Phones</option>
                       <option value="Computers">Computers</option>
                       <option value="Accessories">Accessories</option>
                       <option value="Printers">Printers</option>
                       <option value="Cameras">Cameras</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <!-- price -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="productDetail.Price" />
                    <span asp-validation-for="productDetail.Price" class="text-danger"></span>
                </div>
            </div>

            <!-- description -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="productDetail.Description"></textarea>
                    <span asp-validation-for="productDetail.Description" class="text-danger"></span>
                </div>
            </div>

            <!-- image -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="productDetail.ImageFile" />
                    <span asp-validation-for="productDetail.ImageFile" class="text-danger"></span>
                </div>
            </div>

            <!-- buttons -->
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Products/Index" role="button">Cancel</a>
                </div>
            </div>

        </form>

    </div>

</div>