@page
@model ProductStore.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<h2> List of Products </h2>
<hr />

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" href="/Admin/Products/Create">New Product</a>
    </div>
    <div class="col">

    </div>
</div>

@if (Model.products != null && Model.products.Any())
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>

        @foreach (var product in Model.products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Brand</td>
                <td>@product.Category</td>
                <td>(@product.Price)R</td>
                <td><img src="/products/@product.ImageFileName" alt="product image" width="100" /></td>
                <td>@product.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td style="white-space: nowrap">
                    <a class="btn btn-primary btn-sm" href="/Admin/Products/Edit?id=@product.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Admin/Products/Delete?id=@product.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p class="text-muted">No products available</p>
}